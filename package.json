{
  "name": "snippets-app",
  "version": "1.0.0",
  "description": "A desktop app for organizing and managing code snippets",
  "main": "dist/main.js",
  "scripts": {
    "dev": "node start.js",
    "dev:react": "node node_modules/vite/bin/vite.js",
    "dev:electron": "set NODE_ENV=development && node node_modules/electron/cli.js .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "npx tsc && npx vite build",
    "build:electron": "npx tsc -p tsconfig.electron.json",
    "dist": "npm run build && npx electron-builder",
    "lint": "npx eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "npx vite preview"
  },
  "keywords": [
    "snippets",
    "code",
    "desktop",
    "electron",
    "react"
  ],
  "author": "Pedro",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.2",
    "electron": "^27.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@monaco-editor/react": "^4.6.0",
    "better-sqlite3": "^9.0.0",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "fuse.js": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0",
    "zustand": "^4.4.0"
  },
  "build": {
    "appId": "com.pedro.snippets-app",
    "productName": "Snippets App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
